<Window
    x:Class="WYYMusicUploader.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WYYMusicUploader"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LoginWindow"
    Width="250"
    Height="130"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions> 
            <StackPanel Grid.Row="0" Orientation="Horizontal" Height="40">
                <TextBlock Margin="20,0,20,0" Height="20" VerticalAlignment="Center">账号</TextBlock>
                <TextBox Name="account" Width="150" Height="20" />
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Height="40">
                <TextBlock Margin="20,0,20,0" Height="20" VerticalAlignment="Center">密码</TextBlock>
                <PasswordBox Name="pwd" Width="150" Height="20" />
            </StackPanel> 
            <Button Grid.Row="2" Height="20" Width="40" HorizontalAlignment="Center" Click="Button_Click">登录</Button> 
    </Grid>
</Window>
